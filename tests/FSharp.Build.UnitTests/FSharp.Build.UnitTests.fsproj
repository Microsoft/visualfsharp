<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net46;netcoreapp1.0</TargetFrameworks>
    <PackageTargetFallback>portable-net45+win8+wp8+wpa81</PackageTargetFallback>
    <OutputType>Exe</OutputType>
    <TargetExt>.dll</TargetExt>
    <DisableImplicitFSharpCoreReference>true</DisableImplicitFSharpCoreReference>
    <Optimize>false</Optimize>
    <Tailcalls>false</Tailcalls>
    <NoWarn>$(NoWarn);988</NoWarn>
    <DefineConstants Condition="'$(TargetFramework)' == 'netcoreapp1.0'">$(DefineConstants);coreclr</DefineConstants>
    <DefineConstants Condition="'$(TargetFramework)' == 'net46'">$(DefineConstants);net40</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="WriteCodeFragmentTests.fs" />
    <Compile Include="Program.fs" Condition="'$(TargetFramework)' == 'netcoreapp1.0'" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Runtime" Version="$(MicrosoftBuildRuntimePackageVersion)" />
    <PackageReference Include="NUnitLite" Version="$(NUnitLitePackageVersion)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(FSharpSourcesRoot)\fsharp\FSharp.Build\FSharp.Build.fsproj" />
    <ProjectReference Include="$(FSharpSourcesRoot)\fsharp\FSharp.Core\FSharp.Core.fsproj" />
  </ItemGroup>

</Project>
